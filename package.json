{
  "name": "beadwork",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @beadwork/ui dev",
    "dev:server": "bun run --filter @beadwork/server dev",
    "dev:all": "concurrently \"bun run --filter @beadwork/server dev\" \"bun run --filter @beadwork/ui dev\" --names \"server,ui\" --prefix-colors \"blue,green\"",
    "build": "bun run --filter @beadwork/ui build",
    "build:server": "bun run --filter @beadwork/server build",
    "preview": "bun run --filter @beadwork/ui preview",
    "test": "bun run --filter @beadwork/ui test"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.7.2"
  }
}
